{
    "name": "marauders-map",
    "displayName": "The Marauder's Map",
    "publisher": "bs-code",
    "description": "Customize keybindings into groups that come with a quickPicker for visual a reminder",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./extension.js",
    "contributes": {
      "configuration": {
      "type": "object",
      "title": "MaraudersMap Settings",
      "properties": {
        "MaraudersMap.spells": {
          "type": "array",
          "default": [],
          "description": "An array of keybinding groups."
        }
      }
    },
        "commands": [
            {
                "command": "MaraudersMap.helloWorld",
                "title": "Hello World",
                "category": "MaraudersMap"
            },
            {
                "command": "MaraudersMap.expectoPatronum",
                "title": "Create New Group",
                "category": "MaraudersMap",
                "icon": "$(group-by-ref-type)"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.7",
        "@types/node": "20.x",
        "@types/vscode": "^1.91.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "jsonc-parser": "^3.3.1"
    }
}
